<% include partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new camp site</h1>
		<div style="width: 30%; margin: 35px auto;">	
			<form action="/index" method="POST">
			
			<div class="form-group"><input class="form-control" type="text" name="name" 		placeholder="Name of the camp"></div>
			<div class="form-group">
			<input class="form-control" type="text" name="image" placeholder="Image URL of the camp">
			</div>
			<div class="form-group">
			<input class="form-control" type="text" name="desc" placeholder="Description of the camp">
			</div>
			<div class="form-group"><button class="btn btn-primary btn-lg btn-block">Submit</button></div>

			</form>
			<a href="/index">Click here to view camps</a>	
		</div>
	</div>	
</div>

<% include partials/footer %>